#include<stdio.h>
main()
{
    int n,i=0,even=0,odd=0;
    printf("Enter a number\n");
    scanf("%d",&n);
    while(i<=n)
    {
        if(i%2==0)
        {
            even=even+i;
        }
        else
        {
            odd=odd+i;
        }
        i++;
    }
    printf("%d\n",odd-even);
    getch();
}
